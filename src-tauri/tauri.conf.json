{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Hush Feeds",
  "version": "0.2.0",
  "identifier": "social.hushnetwork.feeds",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3100",
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build:static"
  },
  "app": {
    "windows": [
      {
        "title": "Hush Feeds!",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "app", "dmg"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBMTRBMjNFNkNFODg0MEIKUldRTGhPaHNQcUlVdXJzNWczOHlvVm52aVpWaWRFWFU4aDZJYTJBM3krZzZrd2NqcjA4Q2NuNHEK",
      "endpoints": [
        "https://github.com/aboimpinto/HushNetwork/releases/latest/download/latest.json"
      ]
    }
  }
}
